{
    "manifest_version": 3,
    "name": "TWGO Career First!",
    "version": "1.0",
  
    "description": "This extension pins Career mode tracks to the top of the leaderboards page on tinywhoopgo.com website. It also highlights your pilot name on leaderboards for better accessibility.",
    "icons": {
      "32": "ext/images/twgologo32.png",
      "48": "ext/images/twgologo48.png",
      "64": "ext/images/twgologo64.png"
    },
    "content_scripts": [
      {
        "matches": ["*://tinywhoopgo.com/leaderboard*", "*://*.tinywhoopgo.com/leaderboard*"],
        "js": ["ext/leaderboard.js"]
      }
    ],
    "action": {
        "default_area": "navbar",
        "default_icon": {
            "48": "ext/images/twgologo48.png"
        },
        "default_popup": "ext/popup.html"
    },
    "permissions": [
      "storage"
    ],
    "options_ui": {
      "page": "ext/popup.html"
    }

  }
  